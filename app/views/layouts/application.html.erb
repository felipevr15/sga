</html>

<script type="text/javascript">
	$("input.date").mask("99/99/9999",{placeholder:" "});
	$("input.zipcode").mask("99999-999",{placeholder:" "});
	$("input.phone").mask("(99) 9999-9999",{placeholder:" "});
	$("input.decimal").maskMoney({symbol:"R$", decimal:",", thousands:"."});
	$("input.placa").mask("***-9999",{placeholder:" "});
	$('ul.sf-menu').superfish();

	<%= yield :js %>

</script>
